<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fblife.zhaohengyi.counter.MainActivity"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:weightSum="1">
<EditText
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:editable="false"
    android:gravity="right|bottom"
    android:background="@drawable/bg_textview"
    android:id="@+id/number_output"
     />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="C"
            android:textSize="25dp"
            android:background="@drawable/ashen_select"
            android:paddingRight="10dp"
            android:paddingEnd="10dp"
            android:gravity="right|bottom"
            android:id="@+id/but_clear"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="DEL"
            android:textSize="25dp"
            android:background="@drawable/ashen_select"
            android:paddingRight="10dp"
            android:paddingEnd="10dp"
            android:gravity="right|bottom"
            android:id="@+id/but_delete"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="ร"
            android:textSize="25dp"
            android:background="@drawable/ashen_select"
            android:paddingRight="10dp"
            android:paddingEnd="10dp"
            android:gravity="right|bottom"
            android:id="@+id/but_multiply"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="รท"
            android:textSize="25dp"
            android:background="@drawable/ashen_select"
            android:paddingRight="10dp"
            android:paddingEnd="10dp"
            android:gravity="right|bottom"
            android:id="@+id/but_divide"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="7"
            android:textSize="25dp"
            android:background="@drawable/ashen_select"
            android:paddingRight="10dp"
            android:paddingEnd="10dp"
            android:gravity="right|bottom"
            android:id="@+id/but_7" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="8"
            android:textSize="25dp"
            android:background="@drawable/ashen_select"
            android:paddingRight="10dp"
            android:paddingEnd="10dp"
            android:gravity="right|bottom"
            android:id="@+id/but_8" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="9"
            android:textSize="25dp"
            android:background="@drawable/ashen_select"
            android:paddingRight="10dp"
            android:paddingEnd="10dp"
            android:gravity="right|bottom"
            android:id="@+id/but_9" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="-"
            android:textSize="25dp"
            android:background="@drawable/ashen_select"
            android:paddingRight="10dp"
            android:paddingEnd="10dp"
            android:gravity="right|bottom"
            android:id="@+id/but_subtract" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="4"
            android:textSize="25dp"
            android:background="@drawable/ashen_select"
            android:paddingRight="10dp"
            android:paddingEnd="10dp"
            android:gravity="right|bottom"
            android:id="@+id/but_4" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="5"
            android:textSize="25dp"
            android:background="@drawable/ashen_select"
            android:paddingRight="10dp"
            android:paddingEnd="10dp"
            android:gravity="right|bottom"
            android:id="@+id/but_5" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="6"
            android:textSize="25dp"
            android:background="@drawable/ashen_select"
            android:paddingRight="10dp"
            android:paddingEnd="10dp"
            android:gravity="right|bottom"
            android:id="@+id/but_6" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="+"
            android:textSize="25dp"
            android:background="@drawable/ashen_select"
            android:paddingRight="10dp"
            android:paddingEnd="10dp"
            android:gravity="right|bottom"
            android:id="@+id/but_add" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center_horizontal"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="1"
                    android:textSize="25dp"
                    android:background="@drawable/ashen_select"
                    android:paddingRight="10dp"
                    android:paddingEnd="10dp"
                    android:gravity="right|bottom"
                    android:id="@+id/but_1" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="2"
                    android:textSize="25dp"
                    android:background="@drawable/ashen_select"
                    android:paddingRight="10dp"
                    android:paddingEnd="10dp"
                    android:gravity="right|bottom"
                    android:id="@+id/but_2" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="3"
                    android:textSize="25dp"
                    android:background="@drawable/ashen_select"
                    android:paddingRight="10dp"
                    android:paddingEnd="10dp"
                    android:gravity="right|bottom"
                    android:id="@+id/but_3" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:weightSum="1">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"

                    android:text="0"
                    android:textSize="25dp"
                    android:background="@drawable/ashen_select"
                    android:paddingRight="10dp"
                    android:paddingEnd="10dp"
                    android:gravity="right|bottom"
                    android:id="@+id/but_0"
                    android:layout_weight="1" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="."
                    android:textSize="25dp"
                    android:background="@drawable/ashen_select"
                    android:paddingRight="10dp"
                    android:paddingEnd="10dp"
                    android:gravity="right|bottom"
                    android:id="@+id/but_comma"/>
                </LinearLayout>

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:text="="
            android:textSize="25dp"
            android:paddingRight="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/orange_seletcor"
            android:gravity="right|bottom"
            android:id="@+id/equal_sign"/>

    </LinearLayout>


</LinearLayout>
